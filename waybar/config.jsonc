{
    "height": 30,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],

    "modules-right": [
      "network",
      "cpu",
      "memory",
      "wireplumber",
      "clock",
      "tray"
    ],

    "hyprland/workspaces": {
      "format": "{icon}",
      "format-icons": {
        "active": "",
        "default": ""
      }
    },

    "hyprland/window": {
      "format": "| {initialTitle}"
    },

    "network": {
      "interval": 1,
      "format-wifi": "   {bandwidthUpBytes}  {bandwidthDownBytes}"
    },

    "cpu": {
      "interval": 1,
      "format": " {usage}%"
    },

    "memory": {
      "interval": 1,
      "format": " {percentage}%"
    },

    "wireplumber": {
      "format": " {volume}%",
      "format-muted": " {volume}%"
    },

    "clock": {
      "format": "󰥔 {:%H:%M}",
      "tooltip": false
    },

    "tray": {
      "spacing": 10,
    }
}
